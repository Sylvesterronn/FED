<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarShop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarShop.Pages">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent
            Title="Faktura"
            ContentTemplate="{DataTemplate local:FakturaPage}" />
        <ShellContent
            Title="Kalender"
            ContentTemplate="{DataTemplate local:KalenderPage}" />
    </TabBar>
</Shell>
